<body>
  <h2>üíº ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶°‡¶Æ‡¶ø‡¶® ‡¶â‡¶á‡¶•‡¶°‡ßç‡¶∞ ‡¶∞‡¶ø‡¶ï‡ßã‡¶Ø‡¶º‡ßá‡¶∏‡ßç‡¶ü ‡¶™‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤</h2>
  <table>
    <thead>
      <tr><th>‡¶á‡¶Æ‡ßá‡¶á‡¶≤</th><th>‡¶ü‡¶æ‡¶ï‡¶æ</th><th>‡¶∏‡ßç‡¶ü‡ßç‡¶Ø‡¶æ‡¶ü‡¶æ‡¶∏</th><th>‡¶Ö‡ßç‡¶Ø‡¶æ‡¶ï‡¶∂‡¶®</th></tr>
    </thead>
    <tbody id="requestTable">
      <tr><td colspan="4">‡¶≤‡ßã‡¶° ‡¶π‡¶ö‡ßç‡¶õ‡ßá...</td></tr>
    </tbody>
  </table>

  <script type="module">
    import { db } from "./firebase.js";
    import {
      collection, getDocs, doc, updateDoc
    } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-firestore.js";

    const table = document.getElementById("requestTable");

    async function loadRequests() {
      const snapshot = await getDocs(collection(db, "windowrequest"));
      table.innerHTML = "";
      snapshot.forEach(docSnap => {
        const data = docSnap.data();
        const row = document.createElement("tr");
        row.innerHTML = `
          <td>${data.email}</td>
          <td>${data.amount} ‡¶ü‡¶æ‡¶ï‡¶æ</td>
          <td>${data.status}</td>
          <td>
            <button onclick="approveRequest('${docSnap.id}')">Approve</button>
            <button onclick="rejectRequest('${docSnap.id}')">Reject</button>
          </td>
        `;
        table.appendChild(row);
      });
    }

    window.approveRequest = async (id) => {
      await updateDoc(doc(db, "windowrequest", id), { status: "Approved" });
      loadRequests();
    };

    window.rejectRequest = async (id) => {
      await updateDoc(doc(db, "windowrequest", id), { status: "Rejected" });
      loadRequests();
    };

    window.onload = loadRequests;
  </script>
